---
import Button from './Button.astro';
import siteConfig from '../data/site-config';

const contactForm = siteConfig.contactForm;

const { class: className } = Astro.props;
---

{
    contactForm?.formUrl && (
        <section class:list={['px-8 py-12 flex flex-col items-center border border-dashed border-main text-center sm:px-12 sm:py-16', className]}>
            {contactForm.title && (
                <h2 class:list={['w-full max-w-xl text-2xl leading-tight font-serif font-medium sm:text-4xl', contactForm.text ? 'mb-4' : 'mb-8']}>
                    {contactForm.title}
                </h2>
            )}
            {contactForm.text && <p class="w-full max-w-xl mb-8 text-sm leading-normal">{contactForm.text}</p>}
            <form
                action={contactForm.formUrl}
                method="post"
                id="contact-form"
                name="contact-form"
                class="w-full max-w-xl flex flex-col gap-3.5 sm:flex-col"
                target="_blank"
            >
                <label for="email" class="sr-only">
                    Email Address
                </label>
                <input
                    type="email"
                    name="email"
                    id="email"
                    class="w-full h-9 px-5 py-2 text-sm text-main bg-transparent border border-main rounded-full placeholder:text-main/60 focus:outline-none"
                    required=""
                    value=""
                    placeholder="Your Email"
                />
                <textarea
                    name="text"
                    id="text"
                    rows="5"
                    class="w-full px-5 py-2 text-sm text-main bg-transparent border border-main rounded-md placeholder:text-main/60 focus:outline-none"
                    required=""
                    value=""
                    placeholder="Message"
                />
                <Button type="submit" name="contact" class="w-full h-9 sm:w-auto">
                    Submit
                </Button>
            </form>
        </section>
    )
}
